@model ProjectDemoV1.ViewModel.ChangePasswordVM

@{
    ViewBag.Title = "Changepassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="changePassword">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="containerr">
        <div class="content">
            <div class="password">
                <div><h2>Đổi mật khẩu</h2></div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.UserName, new { @Value = @Session["UserName"] })
                <div>
                    @Html.PasswordFor(model => model.Password, new { @class = "password-item", placeholder = "Nhập mật khẩu cũ" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "color: red; font-size: 12px;" })
                </div>
                <div>
                    @Html.PasswordFor(model => model.NewPassword, new { @class = "password-item", placeholder = "Nhập mật khẩu mới" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger", style = "color: red; font-size: 12px;" })
                </div>

                <div>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "password-item", placeholder = "Xác nhận lại mật khẩu" })
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger", style = "color: red; font-size: 12px;" })
                </div>

                @if (@ViewBag.Message != null)
                {
            <div class="text-danger" style="color: red; font-size: 15px; margin-top: 10px;">@ViewBag.Message</div>
                }
                <div class="btnn">
                    <a href="@Url.Action("Details", "Profiles", new { id = Session["AccountId"] })">Hủy</a>
                    <button type="submit">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>
