@model ProjectDemoV1.Models.Question

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="question">
        <div class="question_title"><h3>@Html.Raw(@Model.QuestionContent)</h3></div>
        <div class="answer">
            <ul class="answer_list">
                <li class="answer_option"><p>A. @Html.DisplayFor(model => model.OptionA).</p></li>
                <li class="answer_option"><p>B. @Html.DisplayFor(model => model.OptionB).</p></li>
                <li class="answer_option"><p>C. @Html.DisplayFor(model => model.OptionC).</p></li>
                <li class="answer_option"><p>D. @Html.DisplayFor(model => model.OptionD).</p></li>
            </ul>
            @if (Model.Image != null)
            {
                <div class="question_img">
                    <img src="@Url.Action("getImg", "Questions", new { id = Model.QuestionId })" />
                </div>
            }
        </div>
        <div class="question_rigth_answer"><h4>Đáp án đúng: @Html.DisplayFor(model => model.Answer.AnswerName)</h4></div>
        <div class="question_solution"><p>@Html.Raw(@Model.Solution)</p></div>
    </div>

    <div class="btnn">
        @Html.ActionLink("Quay lại", "Index", new { id = Model.SubjectId })
        @if (Convert.ToInt32(@Session["RoleId"]) == 1)
        {
           @Html.ActionLink("Sửa", "Edit", new { id = Model.QuestionId })
           @Html.ActionLink("Xóa", "Delete", new { id = Model.QuestionId })
        }
    </div>
</div>
